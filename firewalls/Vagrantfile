Vagrant.configure("2") do |config|
  config.vm.box = "rudibroekhuizen/opnsense"
  config.vm.box_version = "19.1.4"

  # firewall1
  config.vm.define 'firewall1' do |config|
    config.vm.provider 'virtualbox' do |vb|
      #nic1, wan, nat, already available as default in image
      #nic2, lan
      vb.customize ['modifyvm', :id, '--intnet2', '1551972815_net17']
      #nic3, oob
      vb.customize ['modifyvm', :id, '--intnet3', '1551972815_net30']
      vb.customize ['modifyvm', :id, '--macaddress3', '443839000039']
      vb.customize ['modifyvm', :id, "--cableconnected3", 'on']
    end
  end

  # firewall2
  config.vm.define 'firewall2' do |config|
    config.vm.provider 'virtualbox' do |vb|
      #nic1, outside
      vb.customize ['modifyvm', :id, '--intnet1', '1551972815_net12']
      #nic2, inside
      vb.customize ['modifyvm', :id, '--intnet2', '1551972815_net10']
      #nic3, oob
      vb.customize ['modifyvm', :id, '--intnet3', '1551972815_net32']
      vb.customize ['modifyvm', :id, '--macaddress3', '44383900003d']
      vb.customize ['modifyvm', :id, "--cableconnected3", 'on']
    end
  end
  
  # firewall3
  config.vm.define 'firewall3' do |config|
    config.vm.provider 'virtualbox' do |vb|
      #nic1, outside
      vb.customize ['modifyvm', :id, '--intnet1', '1551972815_net7']
      #nic2, inside
      vb.customize ['modifyvm', :id, '--intnet2', '1551972815_net14']
      #nic3, oob
      vb.customize ['modifyvm', :id, '--intnet3', '1551972815_net31']
      vb.customize ['modifyvm', :id, '--macaddress3', '44383900003b']
      vb.customize ['modifyvm', :id, "--cableconnected3", 'on']
    end
  end
end
